    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/splash">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/gear"
        android:layout_margin="10dp"
        android:id="@+id/image"/>
